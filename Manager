import java.util.*;

public class Manager extends Personel{
    private int Tasktrack= 0;
    private int num_complete_task;
    //I want to add private arraylists to each manager
    //object
  
  public Manager(String NAME, int AGE, int ID, double WAGE, int HOURS, int DAYS){
  super(NAME,AGE,ID,WAGE,HOURS,DAYS);
  }
  
  //Could be more effecient 
  public boolean isTasksComplete(Personel employee){
      if(employee.getTasks() != 0){
          return false;
      }
      return true;
  }

  //Display all team members...it works!
  public void displayTeam(ArrayList<Personel> employees){
    System.out.println("Here is the list of employees in " + this.getName() + "'s team: ");  
    for(int i=1; i < employees.size(); i++){
        System.out.println(employees.get(i).getName());
      }
  }
  
  //Displays people to hire...it works
  public void displayOption(ArrayList<Personel> options){
      System.out.println("Here is a list of possible employees: ");
      for(int i = 0; i < options.size(); i++){
          System.out.println(options.get(i).getName());
      }
  }
    
    //Firing an employee.... it works!
    public void firing(ArrayList<Personel> employees, Personel toFire){
        //Remove element from arrayList
        employees.remove(toFire);
        System.out.println("You have just removed: " + toFire.getName());

    }
    
    //Hiring an employee
    public void hiring(ArrayList<Personel> employees, ArrayList<Personel> options, Personel toHire){
        //Add element from option
        employees.add(toHire);
        //Remove from previous list
        options.remove(toHire);
        System.out.println("You have just hired: " + toHire.getName());
    }
       
}
